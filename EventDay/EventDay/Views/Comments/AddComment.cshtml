@model EventDay.Models.Comment

@{
    ViewBag.Title = "Create";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Dodaj komentarz</legend>

        @Html.HiddenFor(model => model.EventId)

        <div id="editor-field">
            
            @Html.TextAreaFor(model => model.Content,new {style = "width: 300px;"})
            @Html.ValidationMessageFor(model => model.Content)
        </div>

         <div class="editor-label">
            @Html.LabelFor(model => model.CommentCategoryId, "Ocena:")
        </div>
        <div class="editor-field">
          @Html.DropDownList("CommentCategoryId")
            @Html.ValidationMessageFor(model => model.CommentCategoryId)
        </div>


       <p>
               <button type="submit" class="btn btn-default btn-sm">Dodaj</button>
        </p>
    </fieldset>
}

