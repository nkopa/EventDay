             <img src="@Url.Content("~/Content/Uploads/" + @Html.DisplayFor(model => model.ProfileImage))" alt="brak"/>
          </dd>

        <dt>Kategoria: </dt>
            <dd>
            @Html.DisplayFor(model => model.Category.Name)
            </dd>

        <dt>Tytuł: </dt>
            <dd>
              @Html.DisplayFor(model => model.Title)
            </dd>

        <dt>Start: </dt>
            <dd>
                @Html.DisplayFor(model => model.DateBegin)
                <span></span>
                @Html.DisplayFor(model => model.HourBegin)
            </dd>
      
        <dt>Meta: </dt>
