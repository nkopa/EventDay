        <dt>Miejscowość: </dt>
            <dd>
               @Html.DisplayFor(model => model.City)
            </dd>
              
        <dt>Kod pocztowy: </dt>
            <dd>
                @Html.DisplayFor(model => model.ZipCode)
            </dd>
        
        
        <dt>Województwo: </dt>
            <dd>
                @Html.DisplayFor(model => model.Voivoweship )
            </dd>
      
        <dt>Ulica: </dt>
            <dd>
              @Html.DisplayFor(model => model.Street)
            </dd>
         
        <dt>Numer Domu: </dt>
            <dd>
               @Html.DisplayFor(model => model.HouseNumber)
            </dd>
        
        <dt>Numer lokalu: </dt>
            <dd>
            @Html.DisplayFor(model => model.ApartmentNumber)
            </dd>

        <dt>Jak dojechać: </dt>
            <dd>
                @Html.DisplayFor(model => model.Directions)
            </dd>

     <p style="font-weight:bold; color:gray; border-bottom:1px solid gray; text-align:center; margin-top:10px;">INFO DODATKOWE:</p>
       <dt>Telefon kontaktowy: </dt>
            <dd>
             @Html.DisplayFor(model => model.ContactNumber)
            </dd>
      
         <dt>Email: </dt>
             <dd>
                @Html.DisplayFor(model => model.ContactEmail)
            </dd>
      
        <dt>Www: </dt>
            <dd>
                 @Html.DisplayFor(model => model.Website)
            </dd>

         <dt>Cena wstępu: </dt>
            <dd>
             @Html.DisplayFor(model => model.Price)
            </dd>

        <dt>Ilość miejsc: </dt>
            <dd>
                @Html.DisplayFor(model => model.Capacity)
            </dd>

        <dt>Wolne miejsca: </dt>
            <dd>
                @ViewBag.FreeSeats;
            </dd>

      <dt>Regulamin: </dt>
            <dd>
             @Html.DisplayFor(model => model.Regulations)
            </dd>

      <dt>Data publikacji: </dt>
                <dd>
                @Html.DisplayFor(model => model.DateCreated)
             </dd>

      <dt>Autor publikacji: </dt>
            <dd>
        @Html.ActionLink(Model.Username, "UserDetails", new { name = Model.Username })
            </dd>
