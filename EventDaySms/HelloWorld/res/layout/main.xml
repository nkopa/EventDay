<?xml version="1.0" encoding="utf-8"?>
<!-- Jest to plik /res/layout/main.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical" android:layout_width="fill_parent"
   android:layout_height="fill_parent">
  
    
    <LinearLayout 
        android:orientation="vertical" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button 
            android:id="@+id/sendSmsBtn" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:background="#286090" 
            android:layout_gravity="center" 
            android:text="Wyślij wiadomości"
            android:padding="10px" 
            android:layout_margin="10px" 
        />
      
         <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Podsumowanie:" />

         <EditText android:id="@+id/msgAll" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:text="" />
        
         <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Lista Błędów:" />

         <EditText android:id="@+id/msgErrors" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:text="" />

      </LinearLayout>
      
     </LinearLayout>